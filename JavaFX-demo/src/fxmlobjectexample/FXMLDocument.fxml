<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="vbox" layoutX="10.0" layoutY="10.0" prefHeight="250.0" prefWidth="300.0" spacing="10"
    xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8"
    fx:controller="fxmlobjectexample.FXMLDocumentController">

  <style>
    -fx-padding: 10;
    -fx-border-style: solid inside;
    -fx-border-width: 2;
    -fx-border-insets: 5;
    -fx-border-radius: 5;
    -fx-border-color: orange;
  </style>
  <Label fx:id="nameLbl" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0"
      text="Please enter your name:" textAlignment="LEFT" />

  <!-- inputText is bound to variable in controller file -->
  <TextField fx:id="inputText" prefWidth="100.0" />

  <Button fx:id="submitBtn" alignment="CENTER_RIGHT" contentDisplay="CENTER"
      text="SUBMIT" textAlignment="CENTER" onAction="#printOutput" />

  <Label fx:id="outputLbl" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0"
      text="Message:" textAlignment="LEFT" />

  <!-- outputText is bound to variable in controller file -->
  <TextArea fx:id="outputText" prefHeight="100.0" prefWidth="200.0" wrapText="true" />

  <ImageView fx:id="imageView">
    <Image url="@../img/California calm.gif" /><!-- 相対パス -->
  </ImageView>
</VBox>
